# Fenrir Testing System Configuration
# Copy this file to .env and configure your settings

# Authentication Configuration
AUTH_TOKEN_LENGTH=64
AUTH_ROTATION_INTERVAL_MINUTES=60
AUTH_TOKEN_FILE_PATH=/tmp/fenrir_auth_token.txt

# Email Notification Configuration
EMAIL_NOTIFICATION_ENABLED=true
EMAIL_RECIPIENT=admin@company.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_SUBJECT=Fenrir Authentication Token Update

# Application Configuration
API_VERSION=v1
ENVIRONMENT=development

# Frontend Framework Versions
BOOTSTRAP_VERSION=5.3.3
HTMX_VERSION=2.0.4
JQUERY_VERSION=3.7.1

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///fenrir.db

# Other Configuration
# LOG_LEVEL=INFO
